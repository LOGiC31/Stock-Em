<%= stylesheet_link_tag 'user_profiles', media: 'all', 'data-turbolinks-track': 'reload' %>
<header>
  <div class="header-title">Stock'Em</div>
  <div>
    <span class="greeting">Hello, <span id="username"><%= @user_profile.first_name %></span></span>
    <button class="icon-button user-icon">
      <i class="fas fa-user"></i>
    </button>
  </div>
</header>

<% content_for :title, "Users" %>
<h1>User Profile</h1>
<hr class="styled-hr">

<div id="users">
  <div class="user-card" style="position: relative;">
    <div class="edit-icon">
      <%= link_to image_tag('edit_icon.png', alt: 'Edit', class: 'edit-icon-image'), edit_user_profile_path(@user_profile), class: 'edit-link' %>
    </div>
    <%= render "user_profile", user_profile: @user_profile, editing: false %> <!-- Pass editing as false for viewing -->
  </div>
</div>

<footer>
  <div>The Stock'Em Team, 2024</div>
</footer>
