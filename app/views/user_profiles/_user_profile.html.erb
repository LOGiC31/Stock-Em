<div id="<%= dom_id user_profile %>" class="user-details">
  <div class="user-image">
    <%= image_tag 'default_user.png', alt: "#{user_profile.name}'s profile image", class: "profile-pic" %>
  </div>

  <div class="user-info">
    <div class="user-field">
      <strong>User ID:</strong>
      <span class="user-value"><%= user_profile.user_id %></span>
    </div>

    <div class="user-field">
      <strong>Name:</strong>
      <span class="user-value"><%= user_profile.name %></span>
    </div>

    <div class="user-field">
      <strong>UIN:</strong>
      <span class="user-value"><%= user_profile.uin %></span>
    </div>

    <div class="user-field">
      <strong>Email:</strong>
      <span class="user-value"><%= user_profile.email %></span>
    </div>

    <div class="user-field">
      <strong>Contact No:</strong>
      <span class="user-value"><%= user_profile.contact_no %></span>
    </div>

    <div class="user-field">
      <strong>Role:</strong>
      <span class="user-value"><%= user_profile.role %></span>
    </div>

    <div class="user-field">
      <strong>Details:</strong>
      <span class="user-value"><%= user_profile.details %></span>
    </div>

    <div class="user-field">
      <strong>Auth Level:</strong>
      <span class="user-value"><%= user_profile.auth_level %></span>
    </div>
  </div>
</div>
