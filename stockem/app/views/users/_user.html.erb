<div id="<%= dom_id user %>" class="user-details">
  <div class="user-image">
    <%= image_tag 'default_user.png', alt: "#{user.name}'s profile image", class: "profile-pic" %>
  </div>

  <div class="user-info">
    <div class="user-field">
      <strong>User ID:</strong>
      <span class="user-value"><%= user.user_id %></span>
    </div>

    <div class="user-field">
      <strong>Name:</strong>
      <span class="user-value"><%= user.name %></span>
    </div>

    <div class="user-field">
      <strong>UIN:</strong>
      <span class="user-value"><%= user.uin %></span>
    </div>

    <div class="user-field">
      <strong>Email:</strong>
      <span class="user-value"><%= user.email %></span>
    </div>

    <div class="user-field">
      <strong>Contact No:</strong>
      <span class="user-value"><%= user.contact_no %></span>
    </div>

    <div class="user-field">
      <strong>Role:</strong>
      <span class="user-value"><%= user.role %></span>
    </div>

    <div class="user-field">
      <strong>Details:</strong>
      <span class="user-value"><%= user.details %></span>
    </div>

    <div class="user-field">
      <strong>Auth Level:</strong>
      <span class="user-value"><%= user.auth_level %></span>
    </div>
  </div>
</div>
